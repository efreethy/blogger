<p id="notice"><%= notice %></p>

<h1>Listing Authors</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>&nbsp&nbsp&nbspEmail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>

        <td><%= author.username %></td>
        <td>&nbsp&nbsp&nbsp<%= author.email %></td>

        <td>&nbsp<%= link_to 'Show', author %></td>
        <td>&nbsp<%= link_to 'Edit', edit_author_path(author) %></td>
        <td>&nbsp<%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
